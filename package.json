  "private": true,
  "workspaces": [
    "packages/*",
    "playground",
    "docs"
  ],
  "main": "index.js",
  "scripts": {
    "start": "lerna run start --stream --parallel --scope '{vue-monorepo-lib}'",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build --scope vue-monorepo-lib",
    "play": "cd playground && yarn start",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.7",
