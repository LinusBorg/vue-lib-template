{
  "name": "vue-lib-monorepo",
  "version": "0.0.0",
  "description": "A monorepo template for developing vue libraries",
  "author": "Thorsten LÃ¼nborg <thorsten@linusb.org>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "build": "wsrun -s -p vue-monorepo-lib -c build",
    "play": "yarn workspace playground start",
    "test": "wsrun -m -c test --",
    "lint": "wsrun -m -c lint --fix",
    "start": "yarn build && yarn play",
    "cypress": "cypress run --config-file cypress/cypress.json",
    "cypress:open": "cypress open --config-file cypress/cypress.json",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.10.3",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@vitejs/plugin-vue": "^1.0.4",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-beta.13",
    "@vuedx/typecheck": "^0.4.1",
    "cypress": "^5.2.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup-plugin-dts": "^2.0.1",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.0",
    "vite": "^2.0.0-0",
    "vue": "^3.0.4",
    "vue-jest": "^5.0.0-alpha.7",
    "wsrun": "^5.2.4"
  }
}
